<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:padding="16dp">

    <!-- Header: Title + Avatar -->
    <RelativeLayout
        android:id="@+id/headerLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="12dp">

        <!-- Title -->
        <TextView
            android:id="@+id/titleTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Customer Profile"
            android:textStyle="bold"
            android:textSize="28sp"
            android:textColor="#2196F3"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:fontFamily="sans-serif-medium" />

        <!-- Avatar -->
        <ImageView
            android:id="@+id/avatarImageView"
            android:layout_width="52dp"
            android:layout_height="52dp"
            android:layout_alignParentEnd="true"
            android:padding="2dp"
            android:src="@drawable/admin"
            android:background="@drawable/circle_avatar_background_blue"
            android:scaleType="centerCrop"
            android:elevation="3dp" />
    </RelativeLayout>

    <!-- Profile Card -->
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/headerLayout"
        android:layout_marginTop="16dp"
        app:cardCornerRadius="12dp"
        app:cardElevation="4dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Customer Photo and Basic Info -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="16dp">

                <!-- Customer Photo -->
                <androidx.cardview.widget.CardView
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    app:cardCornerRadius="40dp"
                    app:cardElevation="2dp"
                    android:layout_marginEnd="16dp">

                    <ImageView
                        android:id="@+id/customerPhotoImageView"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/default_user"
                        android:scaleType="centerCrop" />
                </androidx.cardview.widget.CardView>

                <!-- Basic Customer Info -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_gravity="center_vertical">

                    <TextView
                        android:id="@+id/customerNameTextView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Customer Name"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="#212121" />

                    <TextView
                        android:id="@+id/customerIdTextView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="ID: #12345"
                        android:textSize="14sp"
                        android:textColor="#757575"
                        android:layout_marginTop="4dp" />

                    <TextView
                        android:id="@+id/customerStatusTextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Active Customer"
                        android:textSize="14sp"
                        android:textColor="#4CAF50"
                        android:background="@drawable/status_badge_background"
                        android:paddingStart="8dp"
                        android:paddingEnd="8dp"
                        android:paddingTop="2dp"
                        android:paddingBottom="2dp"
                        android:layout_marginTop="4dp" />
                </LinearLayout>
            </LinearLayout>

            <!-- Customer Information Section -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="8dp"
                app:cardElevation="2dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="12dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Customer Information"
                        android:textColor="#2196F3"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:layout_marginBottom="8dp" />

                    <!-- Phone Number -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="4dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Phone: "
                            android:textStyle="bold"
                            android:textColor="#212121" />

                        <TextView
                            android:id="@+id/customerPhoneTextView"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="+1 234 567 8900"
                            android:textColor="#212121" />

                        <ImageButton
                            android:id="@+id/editPhoneButton"
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:background="@null"
                            android:src="@android:drawable/ic_menu_edit"
                            android:tint="#2196F3" />
                    </LinearLayout>

                    <!-- Email -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="8dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Email: "
                            android:textStyle="bold"
                            android:textColor="#212121" />

                        <TextView
                            android:id="@+id/customerEmailTextView"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="customer@gmail.com"
                            android:textColor="#212121" />

                        <ImageButton
                            android:id="@+id/editEmailButton"
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:background="@null"
                            android:src="@android:drawable/ic_menu_edit"
                            android:tint="#2196F3" />
                    </LinearLayout>

                    <!-- Address -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="8dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Address: "
                            android:textStyle="bold"
                            android:textColor="#212121" />

                        <TextView
                            android:id="@+id/customerAddressTextView"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="123 Main Street, City, Country"
                            android:textColor="#212121" />

                        <ImageButton
                            android:id="@+id/editAddressButton"
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:background="@null"
                            android:src="@android:drawable/ic_menu_edit"
                            android:tint="#2196F3" />
                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Purchase History Section -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="8dp"
                app:cardElevation="2dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="12dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Purchase History"
                        android:textColor="#2196F3"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:layout_marginBottom="12dp" />

                    <!-- Orders Row -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="10dp"
                        android:gravity="center_vertical"
                        android:paddingStart="4dp"
                        android:paddingEnd="4dp">

                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@android:drawable/ic_menu_sort_by_size"
                            android:tint="#2196F3"
                            android:layout_marginEnd="12dp" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Orders"
                            android:textSize="16sp"
                            android:textColor="#212121" />

                        <TextView
                            android:id="@+id/totalOrdersTextView"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="12"
                            android:textSize="18sp"
                            android:textColor="#2196F3"
                            android:textStyle="bold" />
                    </LinearLayout>

                    <!-- Total Spent Row -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="10dp"
                        android:gravity="center_vertical"
                        android:paddingStart="4dp"
                        android:paddingEnd="4dp">

                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@android:drawable/ic_menu_info_details"
                            android:tint="#2196F3"
                            android:layout_marginEnd="12dp" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Total Spent"
                            android:textSize="16sp"
                            android:textColor="#212121" />

                        <TextView
                            android:id="@+id/totalSpentTextView"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="28.500.000Ä‘"
                            android:textSize="18sp"
                            android:textColor="#2196F3"
                            android:textStyle="bold" />
                    </LinearLayout>

                    <!-- Loyalty Points Row -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:paddingStart="4dp"
                        android:paddingEnd="4dp">

                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@android:drawable/btn_star_big_on"
                            android:tint="#2196F3"
                            android:layout_marginEnd="12dp" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Loyalty Points"
                            android:textSize="16sp"
                            android:textColor="#212121" />

                        <TextView
                            android:id="@+id/loyaltyPointsTextView"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="250"
                            android:textSize="18sp"
                            android:textColor="#2196F3"
                            android:textStyle="bold" />
                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Action Buttons -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <!-- View Orders Button -->
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    app:cardCornerRadius="24dp"
                    app:cardBackgroundColor="#E3F2FD"
                    app:cardElevation="2dp">

                    <Button
                        android:id="@+id/viewOrdersButton"
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:text="View Orders"
                        android:textColor="#2196F3"
                        android:textStyle="bold"
                        android:background="?attr/selectableItemBackground"
                        android:textAllCaps="false" />
                </androidx.cardview.widget.CardView>

                <!-- Contact Customer Button -->
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="24dp"
                    app:cardBackgroundColor="#2196F3"
                    app:cardElevation="2dp">

                    <Button
                        android:id="@+id/contactCustomerButton"
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:text="Contact Admin"
                        android:textColor="#FFFFFF"
                        android:textStyle="bold"
                        android:background="?attr/selectableItemBackground"
                        android:textAllCaps="false" />
                </androidx.cardview.widget.CardView>
            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</RelativeLayout>